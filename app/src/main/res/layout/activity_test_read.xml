<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8f6"
    android:padding = "16dp"
    tools:context=".activities.testTranslate">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorWhite">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="14"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/part"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/write_the_word"
                    android:background="@color/colorWhiteTranslate"
                    android:textColor="@color/colorWhite"
                    android:textSize="23sp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/word"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="example"
                    android:textColor="@color/colorWhiteTranslate"
                    android:textSize="32sp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"/>

                <Button
                    android:id = "@+id/next"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:onClick="goNext"
                    android:layout_weight="1"
                    android:stateListAnimator="@null"
                    android:background="@color/colorWhite"
                    android:text="next"/>

            </LinearLayout>
<TextView
    android:id = "@+id/showCardsLeftCount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:layout_gravity="right|bottom"
    android:textSize="20sp"
    android:padding="10dp"
    android:textColor="@color/colorWhite"
    android:background="@color/colorWhiteTranslate"/>
</FrameLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>