<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragmentBack"
    android:gravity="top"
    tools:context=".activities.testWriting">

    <com.google.android.material.card.MaterialCardView
        style = "@style/cardM"
        app:contentPadding="0dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:layout_height="wrap_content"
        android:gravity = "center"
        app:cardBackgroundColor="@color/colorWhite">


        <ScrollView
            android:overScrollMode="never"
            android:id = "@+id/testScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="14">
            <TextView
                style="@style/testCommand"
                android:id="@+id/part"
                android:text="@string/test_synonyms"/>


            <TextView
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text = "текст для примеру"
                android:visibility="visible"
                android:textColor="@color/colorWhiteTranslate"
                android:textSize="32sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.google.android.material.card.MaterialCardView
                    style="@style/cardM"
                    android:id = "@+id/first_syn_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/first_syn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text = "первый"
                        android:visibility="visible"
                        android:textColor="@color/colorWhiteTranslate"
                        android:textSize="18dp" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    style="@style/cardM"
                    android:id = "@+id/second_syn_card"
                    android:layout_marginTop="6dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/second_syn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text = "второй"
                        android:visibility="visible"
                        android:textColor="@color/colorWhiteTranslate"
                        android:textSize="18dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.google.android.material.card.MaterialCardView
                    style="@style/cardM"
                    android:id = "@+id/third_syn_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/third_syn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text = "третий"
                        android:visibility="visible"
                        android:textColor="@color/colorWhiteTranslate"
                        android:textSize="18dp" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    style="@style/cardM"
                    android:id = "@+id/fourth_syn_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/fourth_syn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text = "четвертый"
                        android:visibility="visible"
                        android:textColor="@color/colorWhiteTranslate"
                        android:textSize="18dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2">
                <com.google.android.material.card.MaterialCardView
                    style="@style/cardM"
                    android:id = "@+id/fifth_syn_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/fifth_syn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text = "пятый"
                        android:visibility="visible"
                        android:textColor="@color/colorWhiteTranslate"
                        android:textSize="18dp" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    style="@style/cardM"
                    android:layout_marginTop="6dp"
                    android:id = "@+id/six_syn_card"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/six_syn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text = "шестой"
                        android:visibility="visible"
                        android:textColor="@color/colorWhiteTranslate"
                        android:textSize="18dp" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="2">
                <Button
                    style="@style/newButton"
                    android:id="@+id/skip"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlueApp"
                    android:background="@color/colorWhite"
                    android:stateListAnimator="@null"
                    android:text="@string/skip" />
                <Button
                    style="@style/newButton"
                    android:id="@+id/check"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorBlueApp"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:onClick="answerClick"
                    android:stateListAnimator="@null"
                    android:text="@string/check" />
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>