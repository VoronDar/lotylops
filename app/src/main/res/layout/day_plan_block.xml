<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:id = "@+id/card"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#62ACEB"
    android:layout_width="160dp"
    android:layout_height="160dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="7dp"
        android:id = "@+id/nameHolder"
        android:layout_marginLeft="7dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginStart="7dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Повторение"
            android:gravity="center"
            android:fontFamily="@font/heebo_black"
            android:textColor="#6496F6"
            android:textSize="14dp"
            android:id = "@+id/sence"
            android:layout_gravity="center"
            />
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id = "@+id/arrow"
        android:layout_gravity="center_vertical|end"
        android:layout_width="10dp"
        android:alpha="0.7"
        android:layout_marginRight = "15dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toTopOf="@id/nameHolder"
        app:layout_constraintBottom_toBottomOf="@id/nameHolder"
        app:layout_constraintEnd_toEndOf="parent"
        android:background = "@drawable/ic_icon_arrow"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id = "@+id/things"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Слова"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/heebo_regular"
        android:textColor="#CCFFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@id/name"
        />
    <TextView
        android:id = "@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text = "Слова"
        android:fontFamily="@font/heebo_bold"
        android:textColor="#09467A"
        android:textSize="18dp"
        android:gravity="center"
        android:background="#80A4D5FE"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>