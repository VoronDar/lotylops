<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:id="@+id/library_fragment">

    <include layout="@layout/upper"
        android:id = "@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/player"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:id = "@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Legolas2020"
                android:fontFamily="@font/heebo_black"
                android:textColor="@color/colorBlack"
                android:textSize="24dp"
                />

            <TextView
                android:id = "@+id/email"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text = "voronsk@gmail.com"
                android:fontFamily="@font/heebo_black"
                android:textColor="#929DC7"
                android:textSize="16dp"
                />
            <TextView
                android:id = "@+id/level"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:text = "11 уровень"
                android:fontFamily="@font/heebo_black"
                android:textColor="#F18827"
                android:textSize="16dp"
                />

        </LinearLayout>


    </LinearLayout>

        <View
            style="@style/divider"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cards"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text = "Ресурсы"
            android:fontFamily="@font/heebo_regular"
            android:textColor="#4069B8"
            android:textSize="18dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <View
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/coin"
                />
            <TextView
                android:id = "@+id/coins"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#0E58E9"
                android:text="12"
                android:textSize="18dp"
                android:fontFamily="@font/heebo_regular"
                />

        </LinearLayout>

        <View
            style="@style/divider"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cards"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text = "Статистика"
            android:fontFamily="@font/heebo_regular"
            android:textColor="#4069B8"
            android:textSize="18dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <View
                android:id = "@+id/firstDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/do_indicator"
                />
            <View
                android:id = "@+id/secondDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/do_indicator"
                />
            <View
                android:id = "@+id/thirdDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/do_indicator"
                />
            <View
                android:id = "@+id/fourthDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/do_indicator"
                />
            <View
                android:id = "@+id/fifthDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/do_indicator"
                />
            <View
                android:id = "@+id/sixthDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/do_indicator"
                />

            <View
                android:id = "@+id/seventhDay"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/do_indicator"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="26dp"
                android:text="ПН"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:text="ВТ"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                />
            <TextView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:text="СР"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                />
            <TextView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:text="ЧТ"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                />
            <TextView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:text="ПТ"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                />
            <TextView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:text="СБ"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                />

            <TextView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="ВС"
                android:textSize="13dp"
                android:gravity="center"
                android:textColor="#7D97C9"
                />

        </LinearLayout>
        <Button
            android:id = "@+id/move"
            style="@style/buttonSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подробная статистика"
            />

        <View
            style="@style/divider"
            app:layout_constraintTop_toBottomOf="@id/cards"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:text = "Достижения"
            android:fontFamily="@font/heebo_regular"
            android:textColor="#4069B8"
            android:textSize="18dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/achieves"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    </ScrollView>
</LinearLayout>