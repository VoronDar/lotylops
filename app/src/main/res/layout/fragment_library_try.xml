<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/fragmentBack"
    android:id = "@+id/library_fragment">


    <androidx.cardview.widget.CardView
        android:id = "@+id/cardView"
        android:layout_weight="8"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="3dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity = "center"
                android:layout_width="match_parent">
                <TextView
                    android:id = "@+id/cards"
                    style="@style/fragmentName"
                    android:text = "@string/library"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/changeState"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:padding="20dp"
                    android:text="изучать колоду"
                    android:textColor="@color/colorBlueApp" />
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/addNew"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="20dp"
                        android:text="добавить карту"
                        android:textColor="@color/colorBlueApp" />

                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/loadNew"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="20dp"
                        android:text="загрузить карту"
                        android:textColor="@color/colorBlueApp" />
                </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:padding = "10dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity = "center"
                            android:layout_gravity = "center">
                        </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/changeStateBack"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:visibility="gone"
                        android:padding="20dp"
                        android:text="изучать колоду"
                        android:textColor="@color/colorBlueApp" />
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/addNewBack"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@color/colorWhite"
                        android:padding="20dp"
                        android:text="добавить карту"
                        android:textColor="@color/colorBlueApp" />
                    <Button
                        style="?android:attr/borderlessButtonStyle"
                        android:id="@+id/loadNewBack"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:padding="20dp"
                        android:text="загрузить карту"
                        android:textColor="@color/colorBlueApp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>