<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >


        <include layout="@layout/upper"
            android:id = "@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:text = "Регулярность"
                android:fontFamily="@font/heebo_regular"
                android:textColor="#4069B8"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <View
                    android:id = "@+id/firstDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/do_indicator"
                    />
                <View
                    android:id = "@+id/secondDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/do_indicator"
                    />
                <View
                    android:id = "@+id/thirdDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/do_indicator"
                    />
                <View
                    android:id = "@+id/fourthDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/do_indicator"
                    />
                <View
                    android:id = "@+id/fifthDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/do_indicator"
                    />
                <View
                    android:id = "@+id/sixthDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/do_indicator"
                    />

                <View
                    android:id = "@+id/seventhDay"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/do_indicator"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="26dp"
                    android:text="ПН"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:text="ВТ"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    />
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:text="СР"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    />
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:text="ЧТ"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    />
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:text="ПТ"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    />
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:text="СБ"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    />

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="ВС"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="#7D97C9"
                    />

            </LinearLayout>
            <View
                style="@style/divider"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:text = "Развитие"
                android:fontFamily="@font/heebo_regular"
                android:textColor="#4069B8"
                android:textSize="18dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">
                <View
                    android:id = "@+id/repeated"
                    android:layout_height="wrap_content"
                    android:layout_width="25dp"
                    android:background="@drawable/do_indicator"
                    android:layout_margin = "4dp"/>
                <TextView
                    android:id = "@+id/repeatedState"
                    android:text = "@string/stat_worked"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:layout_width="0dp"
                    android:textColor="#6C80A5"
                    android:layout_weight="8"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">
                <View
                    android:id = "@+id/studied"
                    android:layout_height="wrap_content"
                    android:layout_width="25dp"
                    android:background="@drawable/do_indicator"
                    android:layout_margin = "4dp"/>
                <TextView
                    android:id = "@+id/studiedState"
                    android:text = "@string/stat_worked"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:layout_width="0dp"
                    android:textColor="#6C80A5"
                    android:layout_weight="8"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">
                <View
                    android:id = "@+id/mistakes"
                    android:layout_height="wrap_content"
                    android:layout_width="25dp"
                    android:background="@drawable/do_indicator"
                    android:layout_margin = "4dp"/>
                <TextView
                    android:id = "@+id/mistakesState"
                    android:text = "@string/stat_worked"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:layout_width="0dp"
                    android:textColor="#6C80A5"
                    android:layout_weight="8"
                    />
            </LinearLayout>
            <View
                style="@style/divider"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:text = "Прогресс"
                android:fontFamily="@font/heebo_regular"
                android:textColor="#4069B8"
                android:textSize="18dp"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/workedDays"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/heebo_black"
                android:textSize="24dp"
                android:textColor="#689AFA"
                android:text = "20"
                android:layout_margin = "4dp"/>
            <TextView
                android:text = "@string/stat_worked"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_regular"
                android:layout_width="0dp"
                android:textColor="#6C80A5"
                android:layout_weight="8"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">
            <TextView
                android:id = "@+id/emptyDays"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:fontFamily="@font/heebo_black"
                android:textSize="24dp"
                android:textColor="#689AFA"
                android:text = "20"
                android:layout_margin = "4dp"/>
            <TextView
                android:text = "@string/stat_skipped"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_regular"
                android:layout_width="0dp"
                android:textColor="#6C80A5"
                android:layout_weight="8"
                />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id = "@+id/learnedCards"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/heebo_black"
                    android:textSize="24dp"
                    android:textColor="#689AFA"
                    android:text = "20"
                    android:layout_margin = "4dp"/>
                <TextView
                    android:text = "Количество выученных карт"
                    android:textSize="16dp"
                    android:layout_marginLeft="30dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:layout_width="0dp"
                    android:textColor="#6C80A5"
                    android:layout_weight="8"
                    />
            </LinearLayout>


            <View
                style="@style/divider"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id = "@+id/maxCard"
            android:text = "30"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorDarkBlueApp"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="left|top"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_height="match_parent">
            <TextView
                android:text = "0"
                android:layout_marginBottom="40dp"
                android:textColor="@color/colorDarkBlueApp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/recyclerView"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="0dp"
            android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:text = "@string/leaen_pace"
                />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">
            <View
                android:background="@color/colorBlueApp"
                android:layout_height="20dp"
                android:layout_margin = "4dp"
                android:layout_width="20dp"/>
            <TextView
                android:text = "@string/stat_repeated"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorDarkBlueApp"
                android:fontFamily="sans-serif-light"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="7"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <View
            android:background="@color/colorAccent"
            android:layout_height="20dp"
            android:layout_margin = "4dp"
            android:layout_width="20dp"/>
        <TextView
            android:text = "@string/stat_forgotten"
            android:textColor="@color/colorDarkBlueApp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="7"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <View
            android:background="@color/colorLightBlueApp"
            android:layout_height="20dp"
            android:layout_margin = "4dp"
            android:layout_width="20dp"/>
        <TextView
            android:text = "@string/stat_remembered"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/colorDarkBlueApp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="8"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/divider" />



    </LinearLayout>

    </ScrollView>
</LinearLayout>