<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id = "@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="25dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:weightSum="400"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">
    <Space
        android:id = "@+id/space"
        android:layout_weight="400"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        />
    <View
        android:id = "@+id/remembered"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="@color/colorBlueApp"
        />
    <View
        android:id = "@+id/forgotten"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        />
    <View
        android:id = "@+id/studied"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:background="@color/colorLightBlueApp"
        android:layout_width="match_parent"
        />
    <TextView
        android:id = "@+id/pace"
        android:layout_marginTop="8dp"
        android:text = "5"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>